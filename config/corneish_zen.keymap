#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    chosen { zmk,matrix_transform = &default_transform; };
};

/ {
    macros {
        mac_scrn_clpbd: mac_scrn_clpbd {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_tap>, <&kp LSHFT &kp LCTRL &kp LGUI &kp N4>;
        };
    };
};

/ {
    behaviors {
        dt_mo_bt_layer: tap_dance {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&mo 2>, <&mo 3>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            label = "QWERTY";
            bindings = <
&kp TAB    &kp Q  &kp W  &kp E     &kp R            &kp T        &kp Y    &kp U  &kp I      &kp O    &kp P     &kp BSPC
&kp LCTRL  &kp A  &kp S  &kp D     &kp F            &kp G        &kp H    &kp J  &kp K      &kp L    &kp SEMI  &kp SQT
&kp LSHFT  &kp Z  &kp X  &kp C     &kp V            &kp B        &kp N    &kp M  &kp COMMA  &kp DOT  &kp FSLH  &kp ESCAPE
                         &kp LGUI  &dt_mo_bt_layer  &kp SPACE    &kp RET  &mo 1  &kp RALT
            >;
        };

        lower_layer {
            label = "NUMBER";
            bindings = <
&kp TAB    &kp N1  &kp N2  &kp N3    &kp N4  &kp N5             &kp N6    &kp N7    &kp N8     &kp N9   &kp N0     &kp BSPC
&trans     &trans  &trans  &trans    &trans  &mac_scrn_clpbd    &trans    &kp UP    &trans     &trans   &kp COLON  &kp NON_US_HASH
&kp RSHFT  &trans  &trans  &trans    &trans  &trans             &kp LEFT  &kp DOWN  &kp RIGHT  &kp DOT  &kp FSLH   &kp ESCAPE
                           &kp LGUI  &trans  &kp SPACE          &kp RET   &trans    &kp RALT
            >;
        };

        raise_layer {
            label = "SYMBOL";
            bindings = <
&kp TAB    &kp EXCL   &kp AT     &kp HASH   &kp DLLR   &kp PRCNT    &kp CARET  &kp AMPS  &kp KP_MULTIPLY  &kp LPAR  &kp RPAR   &kp BSPC
&kp LCTRL  &kp MINUS  &kp UNDER  &kp PLUS   &kp EQUAL  &trans       &kp LBRC   &kp RBRC  &kp LBKT         &kp RBKT  &kp COLON  &kp AT
&kp LSHFT  &kp BSLH   &kp PIPE   &kp GRAVE  &kp TILDE  &trans       &trans     &trans    &kp LT           &kp GT    &kp QMARK  &trans
                                 &kp LGUI   &trans     &kp SPACE    &kp RET    &trans    &kp RALT
            >;
        };

        bt_layer {
            label = "BLUETOOTH";
            bindings = <
&trans      &trans        &trans        &trans        &trans        &trans          &trans  &trans  &trans  &trans  &trans  &trans
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &trans  &trans  &trans  &trans  &trans  &trans
&trans      &trans        &trans        &trans        &trans        &trans          &trans  &trans  &trans  &trans  &trans  &trans
                                        &trans        &trans        &trans          &trans  &trans  &trans
            >;
        };
    };
};
